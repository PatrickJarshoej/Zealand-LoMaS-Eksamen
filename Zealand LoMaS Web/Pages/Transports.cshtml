@page
@model TransportModel
@{
    ViewData["Title"] = "Transports";
}
<link rel="stylesheet" href="~/css/OurDefeault.css" asp-append-version="true" />
<h1>@ViewData["Title"]</h1>
<div class="card">
    <form method="post" asp-page-handler="Create">
        <select id="TeacherID" name="TeacherID" required>
            @foreach (Zealand_LoMaS_Lib.Model.Teacher teacher in Model.Teachers)
            {
                <option value="@teacher.TeacherID">@teacher.Email</option>
            }
        </select>
        <input type="submit" value="Create" />
    </form>
</div>
@foreach (Zealand_LoMaS_Lib.Model.Transport transport in Model.Transports)
{
    <div class="card">
        <h1>
            Transport Id: @transport.TransportID
        </h1>
    </div>

}
