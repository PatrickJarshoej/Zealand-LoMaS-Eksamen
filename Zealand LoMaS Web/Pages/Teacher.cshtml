@page
@model TeacherModel
@{
    ViewData["Title"] = "Transports";
}
<link rel="stylesheet" href="~/css/OurDefeault.css" asp-append-version="true" />
<h1>@ViewData["Title"]</h1>
<div class="card">
    <form method="post" asp-page-handler="Create">
        <input type="number" name="InstitutionID" asp-for="InstitutionID" required />
        <input type="Text" name="FirstName" asp-for="FirstName" required />
        <input type="Text" name="LastName" asp-for="LastName" value="0" required />
        <input type="Text" name="Email" asp-for="Email" value="0" required />
        <input type="Text" name="WeeklyHours" asp-for="WeeklyHours" value="0" required />
        <input type="Text" name="HasCar" asp-for="HasCar" value="false" required />
        <label for="Machine Selection"></label>
        <select id="MachineIDs" name="MachineIDs" required>
            <option value="1">Roskilde</option>
            <option value="2"></option>
            <option value="3"></option>
            <option value="4"></option>
            <option value="5"></option>
            <option value="6"></option>
        </select>
        <input type="submit" value="Create" />
    </form>
</div>
